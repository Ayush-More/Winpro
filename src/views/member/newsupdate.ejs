        function renderNews(newsData) {
            const container = $('#news-container');
            container.empty();

            if (newsData.length === 0) {
                container.html(`
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-newspaper"></i>
                        </div>
                        <div class="empty-text">No news available</div>
                        <div class="empty-subtext">Check back later for updates</div>
                    </div>
                `);
                return;
            }

            newsData.forEach(news => {
                const newsCard = createNewsCard(news);
                container.append(newsCard);
            });

            // Update notification count
            const newCount = newsData.filter(news => news.isNew).length;
            $('#notification-count').text(newCount);
            if (newCount === 0) {
                $('#notification-count').hide();
            }
        }

        function createNewsCard(news) {
            const timeAgo = getTimeAgo(news.date);
            const isNewBadge = news.isNew ? '<span style="background: #ff4757; color: white; padding: 2px 6px; border-radius: 10px; font-size: 10px; margin-left: 10px;">NEW</span>' : '';

            return `
                <div class="news-card ${news.type}" data-type="${news.type}" data-id="${news.id}">
                    <div class="news-header">
                        <div class="news-type ${news.type}">${news.type}</div>
                        <div class="news-date">
                            <i class="fas fa-clock"></i>
                            ${timeAgo}${isNewBadge}
                        </div>
                    </div>
                    <div class="news-title">${news.title}</div>
                    <div class="news-content">${news.content}</div>
                    <div class="news-actions">
                        <button class="read-more-btn" onclick="readMore(${news.id})">Read More</button>
                        <div class="news-stats">
                            <div class="news-stat">
                                <i class="fas fa-eye"></i>
                                <span>${news.views.toLocaleString()}</span>
                            </div>
                            <div class="news-stat">
                                <i class="fas fa-calendar"></i>
                                <span>${news.date}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function initializeEventHandlers() {
            // Filter tab switching
            $('.filter-tab').click(function() {
                $('.filter-tab').removeClass('active');
                $(this).addClass('active');

                const filter = $(this).data('filter');
                filterNews(filter);
            });
        }

        function filterNews(filter) {
            const newsCards = $('.news-card');

            if (filter === 'all') {
                newsCards.show();
            } else {
                newsCards.hide();
                $(`.news-card[data-type="${filter}"]`).show();
            }
        }

        function readMore(newsId) {
            alertMess('Opening full article...');
            // Here you can implement navigation to full article page
            // window.location.href = `/news/${newsId}`;
        }

        function markAllAsRead() {
            $('#notification-count').text('0').hide();
            $('.news-card').find('[style*="background: #ff4757"]').remove();
            alertMess('All notifications marked as read');
        }

        function getTimeAgo(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffTime = Math.abs(now - date);
            const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

            if (diffDays === 0) return 'Today';
            if (diffDays === 1) return 'Yesterday';
            if (diffDays < 7) return `${diffDays} days ago`;
            if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
            return `${Math.floor(diffDays / 30)} months ago`;
        }

        function alertMess(text) {
            let length = $('.alert-toast .msg').length;
            if (length == 0) {
                $('.alert-toast').append(`
                    <div class="msg">
                        <div class="msg-content">${text}</div>
                    </div>
                `);
                setTimeout(() => {
                    $('.msg').fadeOut();
                    setTimeout(() => {
                        $('.alert-toast .msg').remove();
                    }, 100);
                }, 2000);
            }
        }

        function showError(message) {
            $('#news-container').html(`
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="empty-text">${message}</div>
                    <button class="read-more-btn" onclick="loadNews()" style="margin-top: 15px;">Retry</button>
                </div>
            `);
