    <script>
        $(document).ready(function() {
            loadVIPData();
            initializeEventHandlers();
        });

        function loadVIPData() {
            $('.loading-overlay').fadeIn(10);

            Promise.all([
                fetchLevelInfo(),
                fetchUserProgress()
            ]).then(() => {
                $('.loading-overlay').fadeOut(300);
            }).catch(error => {
                console.error('Error loading VIP data:', error);
                showError('Failed to load VIP data');
                $('.loading-overlay').fadeOut(300);
            });
        }

        function fetchLevelInfo() {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: "POST",
                    url: "/api/webapi/LevelTurnOver",
                    data: {},
                    dataType: "json",
                    success: function(response) {
                        console.log('Level Data:', response);
                        if (response.status === true) {
                            renderVIPLevels(response.levels || []);
                        }
                        resolve(response);
                    },
                    error: function() {
                        // Use default levels if API fails
                        renderVIPLevels([]);
                        resolve();
                    }
                });
            });
        }

        function fetchUserProgress() {
            return new Promise((resolve, reject) => {
                $.ajax({
                    type: "GET",
                    url: "/api/webapi/myTeam",
                    dataType: "json",
                    success: function(response) {
                        console.log('User Progress:', response);
                        if (response.status === true) {
                            updateUserProgress(response);
                        }
                        resolve(response);
                    },
                    error: function() {
                        // Use default values if API fails
                        updateUserProgress({ f1: [] });
                        resolve();
                    }
                });
            });
        }

        function updateUserProgress(data) {
            const team = data.f1 || [];

            // Calculate current stats
            let totalTurnover = 0;
            team.forEach(member => {
                totalTurnover += parseFloat(member.total_turn_over || 0);
            });

            const directReferrals = team.length;

            // Determine current level and requirements
            let currentLevel = 1;
            let requiredTurnover = 10000;
            let requiredReferrals = 5;

            if (totalTurnover >= 500000 && directReferrals >= 25) {
                currentLevel = 5;
                requiredTurnover = 100000;
                requiredReferrals = 25;
            } else if (totalTurnover >= 300000 && directReferrals >= 15) {
                currentLevel = 4;
                requiredTurnover = 300000;
                requiredReferrals = 20;
            } else if (totalTurnover >= 150000 && directReferrals >= 15) {
                currentLevel = 3;
                requiredTurnover = 150000;
                requiredReferrals = 15;
            } else if (totalTurnover >= 100000 && directReferrals >= 10) {
                currentLevel = 2;
                requiredTurnover = 100000;
                requiredReferrals = 10;
            } else {
                requiredTurnover = 10000;
                requiredReferrals = 5;
            }

            // Update progress bars
            const turnoverProgress = Math.min((totalTurnover / requiredTurnover) * 100, 100);
            const referralProgress = Math.min((directReferrals / requiredReferrals) * 100, 100);

            $('#turnover-progress').css('width', `${turnoverProgress}%`);
            $('#referral-progress').css('width', `${referralProgress}%`);

            $('#turnover-text').text(`‚Çπ${totalTurnover.toLocaleString()} / ‚Çπ${requiredTurnover.toLocaleString()}`);
            $('#referral-text').text(`${directReferrals} / ${requiredReferrals}`);

            updateVIPLevel(currentLevel);
        }

        function updateVIPLevel(level) {
            const vipLevels = {
                1: { name: 'VIP 1', description: 'Bronze', commission: '3%', bonus: '‚Çπ 0' },
                2: { name: 'VIP 2', description: 'Silver', commission: '2%', bonus: '‚Çπ 0' },
                3: { name: 'VIP 3', description: 'Gold', commission: '1.5%', bonus: '‚Çπ 0' },
                4: { name: 'VIP 4', description: 'Star', commission: '1%', bonus: '‚Çπ 0' },
                5: { name: 'VIP 5', description: 'Diamond', commission: '1%', bonus: '‚Çπ 0' }
            };

            const vip = vipLevels[level] || vipLevels[1];
            $('#current-level').text(vip.name);
            $('#level-description').text(vip.description);
            $('#commission-rate').text(vip.commission);
            $('#daily-bonus').text(vip.bonus);
        }

        function renderVIPLevels(levels) {
            const container = $('#all-levels');
            container.empty();

            // Default VIP levels
            const defaultLevels = [
                { level: 1, name: 'Bronze', turnover: 10000, referrals: 5, commission: '3%', bonus: '‚Çπ 0', icon: 'vip1' },
                { level: 2, name: 'Silver', turnover: 100000, referrals: 10, commission: '2%', bonus: '‚Çπ 0', icon: 'vip2' },
                { level: 3, name: 'Gold', turnover: 150000, referrals: 15, commission: '1.5%', bonus: '‚Çπ 0', icon: 'vip3' },
                { level: 4, name: 'Star', turnover: 300000, referrals: 20, commission: '1%', bonus: '‚Çπ 0', icon: 'vip4' },
                { level: 5, name: 'Diamond', turnover: 500000, referrals: 25, commission: '1%', bonus: '‚Çπ 0', icon: 'vip5' }
            ];

            const levelsToRender = levels.length > 0 ? levels : defaultLevels;

            levelsToRender.forEach((level, index) => {
                const isCurrentLevel = index === 0; // For demo, first level is current
                const levelItem = `
                    <div class="vip-level-item ${isCurrentLevel ? 'current' : ''}">
                        <div class="level-info">
                            <div class="level-icon ${level.icon || 'vip' + level.level}">
                                ${level.level}
                            </div>
                            <div class="level-details">
                                <h4> ${level.name}</h4>
                                <div class="level-requirements">
                                    Turnover: ‚Çπ${level.turnover.toLocaleString()} | Referrals: ${level.referrals}
                                </div>
                            </div>
                        </div>
                        <div class="level-rewards">
                            <div class="reward-item">
                                Commission: <span class="reward-value">${level.commission}</span>
                            </div>
                            <div class="reward-item d-none">
                                Daily Bonus: <span class="reward-value">${level.bonus}</span>
                            </div>
                        </div>
                    </div>
                `;
                container.append(levelItem);
            });
        }

        function initializeEventHandlers() {
            // Tab switching
            $('.tab').click(function() {
                $('.tab').removeClass('active');
                $(this).addClass('active');

                const tabType = $(this).data('tab');
                loadHistoryData(tabType);
            });

            // Claim button handlers
            $('.claim-btn').click(function() {
                const benefitType = $(this).closest('.benefit-card').find('.benefit-title').text();
                alertMess(`${benefitType} claimed successfully!`);
            });
        }

        function loadHistoryData(type) {
            $('.history-content').html(`
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-${type === 'rewards' ? 'gift' : 'chart-line'}"></i>
                    </div>
                    <div class="empty-text">No ${type} history available</div>
                </div>
            `);
        }

        function alertMess(text) {
            let length = $('.alert-toast .msg').length;
            if (length == 0) {
                $('.alert-toast').append(`
                    <div class="msg">
                        <div class="msg-content">${text}</div>
                    </div>
                `);
                setTimeout(() => {
                    $('.msg').fadeOut();
                    setTimeout(() => {
                        $('.alert-toast .msg').remove();
                    }, 100);
                }, 2000);
            }
        }

        function showError(message) {
            $('#all-levels').html(`
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="empty-text">${message}</div>
                    <button class="claim-btn" onclick="loadVIPData()" style="margin-top: 15px;">Retry</button>
                </div>
            `);
        }
    </script>
</body>

</html>
