            success: function (response) {
                if (response.status && response.limits) {
                    const limits = response.limits;
                    $('#min-limit').text(limits.minTransfer.toLocaleString());
                    $('#max-limit').text(limits.maxTransfer.toLocaleString());
                    $('#daily-limit').text(limits.dailyLimit.toLocaleString());
                    $('#daily-used').text(limits.dailyUsed.toLocaleString());

                    // Update progress bar
                    const progressPercent = (limits.dailyUsed / limits.dailyLimit) * 100;
                    $('#daily-progress').css('width', progressPercent + '%');

                    // Change color based on usage
                    if (progressPercent > 80) {
                        $('#daily-progress').css('background-color', '#dc3545'); // Red
                    } else if (progressPercent > 60) {
                        $('#daily-progress').css('background-color', '#ffc107'); // Yellow
                    } else {
                        $('#daily-progress').css('background-color', '#28a745'); // Green
                    }
                }
            },
            error: function() {
                console.log('Failed to load transfer limits');
            }
