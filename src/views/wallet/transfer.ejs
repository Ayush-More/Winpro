function fetchWithTimeout(url, timeout = 10000) {
  return Promise.race([
    fetch(url).then(res => res.json()),  // Assuming JSON response
    new Promise((_, reject) =>
      setTimeout(() => reject(new Error('Request timeout')), timeout)
    )
  ]);
}

function fetchRecharge() {
  console.log("Checking recharge list...");
  return fetchWithTimeout("/api/webapi/recharge/list")
    .then((res) => {
      console.log("Recharge API Response:", res);

      // ✅ Properly check inside res.datas
      const list = res?.datas || [];
      return Array.isArray(list) && list.length > 0;
    })
    .catch((err) => {
      console.error("Error fetching recharge list:", err);
      return false;  // Keep returning false on error to prevent transfer
    });
}

