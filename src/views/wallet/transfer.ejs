$('#send-money-btn').click(async (e) => {
    e.preventDefault();
    
    // Show loading immediately
    $('#send-money-btn').html('<div class="loading"></div> Checking...');
    $('#send-money-btn').prop('disabled', true);
    
    const cantransfer = await fetchRecharge();

    if (!cantransfer) {
        alertMess("Recharge first, then you can transfer money.");
        // Reset button on failure
        $('#send-money-btn').html('<i class="fas fa-paper-plane"></i> Send Money');
        $('#send-money-btn').prop('disabled', false);
        return;
    }
    
    let phone = $('#phone-input').val().trim();
    let amount = $('#amount-input').val().trim();

    if (validateForm(phone, amount)) {
        // Update button text for transfer
        $('#send-money-btn').html('<div class="loading"></div> Transferring...');
        
        $.ajax({
            type: "POST",
            url: "/api/webapi/transfer",
            data: {
                phone: phone,
                amount: amount,
            },
            dataType: "json",
            success: function (response) {
                console.log("Transfer Response:", response);
                alertMess(response.message || 'Transfer completed!');

                if (response.status === true) {
                    // Clear form on success
                    $('#phone-input').val('');
                    $('#amount-input').val('');

                    // Reload user info and transaction history
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    // Handle false status
                    alertMess(response.message || 'Transfer failed. Please try again.');
                }
            },
            error: function(xhr, status, error) {
                console.error("Transfer AJAX Error:", error);
                alertMess('Transfer failed due to network error. Please try again.');
            },
            complete: function() {
                // Reset button state
                $('#send-money-btn').html('<i class="fas fa-paper-plane"></i> Send Money');
                $('#send-money-btn').prop('disabled', false);
            }
        });
    } else {
