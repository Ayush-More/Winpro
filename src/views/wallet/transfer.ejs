                        <div class="table-cell">${r_data.sender_phone}</div>
                        <div class="table-cell">₹${parseFloat(r_data.amount)}</div>
                        <div class="table-cell">${new Date(r_data.datetime).toLocaleDateString()}</div>
                    </div>
                `;
            }).join('');
            $('.lisys-r').html(html);
        }

        // Load transfer history
        $.ajax({
            type: "GET",
            url: "/api/webapi/transfer_history",
            dataType: "json",
            success: function (response) {
                if (response.status === true) {
                    loadTransactionHistory(response.datas);
                    loadTransactionReceiveHistory(response.receive);
                }
            },
            error: function() {
                $('.lisys').html('<div class="empty-state"><div class="empty-icon"><i class="fas fa-exclamation-triangle"></i></div><div class="empty-text">Failed to load transfer history</div></div>');
                $('.lisys-r').html('<div class="empty-state"><div class="empty-icon"><i class="fas fa-exclamation-triangle"></i></div><div class="empty-text">Failed to load received history</div></div>');
            }
        });

        // Input formatting
        $('#phone-input').on('input', function() {
            this.value = this.value.replace(/\D/g, '');
        });

        $('#amount-input').on('input', function() {
            this.value = this.value.replace(/[^0-9.]/g, '');
        });

        // Quick action handlers
        $('.action-item').click(function() {
            const actionType = $(this).find('span').text().toLowerCase();

            switch(actionType) {
                case 'deposit':
                    alertMess('Deposit feature coming soon!');
                    break;
                case 'withdraw':
                    alertMess('Withdraw feature coming soon!');
                    break;
                case 'deposit history':
                    alertMess('Deposit history feature coming soon!');
                    break;
                case 'withdrawal history':
                    alertMess('Withdrawal history feature coming soon!');
                    break;
            }
        });

       
    </script>


