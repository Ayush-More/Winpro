                    phone: "****9012",
                    tier: "Bronze",
                    amount: 5000,
                    date: "2024-01-07"
                }
            ];

            renderWinners(winners);
        }

        function renderWinners(winners) {
            let html = '';
            if (winners.length === 0) {
                html = `
                    <div class="list-group-item text-center py-4">
                        <i class="fas fa-trophy text-muted" style="font-size: 48px;"></i>
                        <p class="mt-2 mb-0 text-muted">No winners yet</p>
                    </div>
                `;
            } else {
                winners.forEach(winner => {
                    const tierIcon = {
                        'Bronze': '<i class="fas fa-medal text-warning"></i>',
                        'Silver': '<i class="fas fa-medal text-secondary"></i>',
                        'Gold': '<i class="fas fa-medal text-warning"></i>',
                        'Diamond': '<i class="fas fa-gem text-info"></i>'
                    };

                    html += `
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">${tierIcon[winner.tier]} ${winner.tier} Winner</h6>
                                <small class="text-muted">${winner.phone} • ${winner.date}</small>
                            </div>
                            <span class="badge bg-success">₹${winner.amount.toLocaleString()}</span>
                        </div>
                    `;
                });
            }

            $('#winners-list').html(html);
        }

        function startCountdown() {
            // Calculate next Sunday 12:00 PM
            const now = new Date();
            const nextSunday = new Date();
            nextSunday.setDate(now.getDate() + (7 - now.getDay()));
            nextSunday.setHours(12, 0, 0, 0);

            function updateCountdown() {
                const now = new Date().getTime();
                const distance = nextSunday.getTime() - now;

                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                $('#countdown').text(`${days}d ${hours}h ${minutes}m ${seconds}s`);

                if (distance < 0) {
                    $('#countdown').text('Draw in progress...');
                }
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);
        }
    </script>
