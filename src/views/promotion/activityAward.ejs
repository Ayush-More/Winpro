<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity Award</title>
    <!-- Foontawsome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" crossorigin="" href="/index_files/index-BUBUniRp.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .activity-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            color: white;
        }
        .award-item {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            backdrop-filter: blur(10px);
        }
        .award-amount {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffd700;
        }
        .claim-btn {
            background: linear-gradient(45deg, #ff6b6b, #ee5a24);
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            color: white;
            font-weight: bold;
        }
        .claim-btn:disabled {
            background: #6c757d;
            cursor: not-allowed;
        }
    </style>
</head>

<body style="font-size: 12px;">
    <div id="root">
        <div class="mainApp">
            <div class="row align-items-center mb-3">
                    <div class="col-2">
                        <a href="/promotion" class="text-decoration-none">
                            <i class="fa-solid fa-arrow-left text-theme1" style="font-size: 20px;"></i>
                        </a>
                    </div>
                    <div class="col-8 text-center">
                        <h5 class="mb-0 text-theme1 fw-bold">Activity Award</h5>
                    </div>
                    <div class="col-2"></div>
                </div>

            <div class="main-content">
                <div class="container py-4">
                    <div class="activity-card">
                        <div class="text-center mb-4">
                            <i class="fas fa-trophy fa-3x text-warning mb-3"></i>
                            <h4>Daily Activity Rewards</h4>
                            <p class="mb-0">Complete daily activities to earn rewards!</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card border-0 rounded-3">
                                <div class="card-header bg-theme1 text-white">
                                    <h6 class="mb-0">Available Activities</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div id="activity-list" class="list-group list-group-flush">
                                        <!-- Activities will be loaded here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-0 rounded-3">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0">Claimed Rewards History</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div id="reward-history" class="list-group list-group-flush">
                                        <!-- History will be loaded here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/client.js"></script>
    <script>
        $(document).ready(function() {
            loadActivityData();
            loadRewardHistory();
        });

        function loadActivityData() {
            // Sample activity data - replace with actual API call
            const activities = [
                {
                    id: 1,
                    title: "Daily Login",
                    description: "Login to your account daily",
                    reward: 10,
                    completed: true,
                    claimed: false
                },
                {
                    id: 2,
                    title: "Place 5 Bets",
                    description: "Place at least 5 bets in any game",
                    reward: 25,
                    completed: false,
                    claimed: false
                },
                {
                    id: 3,
                    title: "Invite a Friend",
                    description: "Invite a friend to join the platform",
                    reward: 50,
                    completed: false,
                    claimed: false
                },
                {
                    id: 4,
                    title: "Weekly Check-in",
                    description: "Check in for 7 consecutive days",
                    reward: 100,
                    completed: false,
                    claimed: false
                }
            ];

            renderActivities(activities);
        }

        function renderActivities(activities) {
            let html = '';
            activities.forEach(activity => {
                const statusIcon = activity.completed ? 
                    '<i class="fas fa-check-circle text-success"></i>' : 
                    '<i class="fas fa-clock text-warning"></i>';
                
                const claimButton = activity.completed && !activity.claimed ? 
                    `<button class="btn claim-btn btn-sm" onclick="claimReward(${activity.id})">Claim ₹${activity.reward}</button>` :
                    activity.claimed ? 
                    '<span class="badge bg-success">Claimed</span>' :
                    '<span class="badge bg-secondary">Incomplete</span>';

                html += `
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                ${statusIcon}
                                <div class="ms-3">
                                    <h6 class="mb-0">${activity.title}</h6>
                                    <small class="text-muted">${activity.description}</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="award-amount">₹${activity.reward}</div>
                                ${claimButton}
                            </div>
                        </div>
                    </div>
                `;
            });

            $('#activity-list').html(html);
        }

        function claimReward(activityId) {
            // Implement reward claiming logic
            $.ajax({
                type: "POST",
                url: "/api/webapi/claimActivityReward",
                data: { activityId: activityId },
                dataType: "json",
                success: function(response) {
                
                consol.log(response);
                    if (response.status) {
                        alert('Reward claimed successfully!');
                        loadActivityData();
                        loadRewardHistory();
                    } else {
                        alert('Failed to claim reward: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error claiming reward. Please try again.');
                }
            });
        }

        function loadRewardHistory() {
            // Sample history data - replace with actual API call
            const history = [
                {
                    title: "Daily Login Bonus",
                    amount: 10,
                    date: new Date().toISOString()
                }
            ];

            renderHistory(history);
        }

        function renderHistory(history) {
            let html = '';
            if (history.length === 0) {
                html = `
                    <div class="list-group-item text-center py-4">
                        <i class="fas fa-history text-muted" style="font-size: 48px;"></i>
                        <p class="mt-2 mb-0 text-muted">No rewards claimed yet</p>
                    </div>
                `;
            } else {
                history.forEach(item => {
                    const date = new Date(item.date).toLocaleDateString();
                    html += `
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0">${item.title}</h6>
                                <small class="text-muted">${date}</small>
                            </div>
                            <span class="badge bg-success">+₹${item.amount}</span>
                        </div>
                    `;
                });
            }

            $('#reward-history').html(html);
        }
    </script>
</body>
</html>
