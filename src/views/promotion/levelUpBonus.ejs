<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg+xml" href="/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trade Level Bonus - DeltInWin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" crossorigin="" href="/index_files/index-BUBUniRp.css">
</head>

<body style="font-size: 12px;">
    <div id="root">
        <div class="mainApp">
            <div class="container-fluid" style="padding: 4px 12px;">
                <div class="row align-items-center mb-3">
                    <div class="col-2">
                        <a href="/promotion" class="text-decoration-none">
                            <i class="fa-solid fa-arrow-left text-theme1" style="font-size: 20px;"></i>
                        </a>
                    </div>
                    <div class="col-8 text-center">
                        <h5 class="mb-0 text-theme1 fw-bold">Trade Level Bonus</h5>
                    </div>
                    <div class="col-2"></div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <div class="card bg-gradient-warning text-white border-0 rounded-3">
                            <div class="card-body text-center" style="
    background: linear-gradient(90deg, #E67302 0%, #ee0a24 100%);
">
                                <h6 class="card-title mb-2">Total Level Bonus</h6>
                                <h2 class="mb-0" id="total-bonus">₹0.00</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 rounded-3">
                            <div class="card-header bg-theme1 text-white">
                                <h6 class="mb-0">Level Bonus History</h6>
                            </div>
                            <div class="card-body p-0">
                                <div id="bonus-list" class="list-group list-group-flush">
                                    <div class="list-group-item text-center py-4">
                                        <i class="fa-solid fa-trophy text-muted" style="font-size: 48px;"></i>
                                        <p class="mt-2 mb-0 text-muted">No level bonus data available</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/client.js"></script>
    <script>
        $(document).ready(function() {
            console.log('Trade Level Bonus page loaded');
            loadTradeLevelBonusData();
        });

        function loadTradeLevelBonusData() {
            // Show loading state
            $('#total-bonus').text('Loading...');
            $('#bonus-list').html('<div class="list-group-item text-center py-4"><i class="fa-solid fa-spinner fa-spin text-muted" style="font-size: 48px;"></i><p class="mt-2 mb-0 text-muted">Loading trade level bonus data...</p></div>');

            // Fetch daily trade data
            $.ajax({
                type: "POST",
                url: "/api/webapi/DailyTrade",
                data: {},
                dataType: "json",
                success: function(response) {
                    console.log('Daily trade response:', response);
                    if (response.status === true) {
                        updateTradeLevelBonusUI(response);
                    } else {
                        showError('Failed to load trade level bonus data');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading trade level bonus data:', error);
                    showError('Error loading trade level bonus data');
                }
            });
        }

        function updateTradeLevelBonusUI(data) {
            const bonusRecords = data.record || [];
            let totalBonus = 0;

            // Calculate totals
            bonusRecords.forEach(bonus => {
                const amount = parseFloat(bonus.amount || 0);
                totalBonus += amount;
            });

            // Update summary cards
            $('#total-bonus').text(`₹${totalBonus.toFixed(2)}`);

            // Render bonus list
            renderTradeLevelBonusList(bonusRecords);
        }

        function renderTradeLevelBonusList(bonusRecords) {
            const bonusList = $('#bonus-list');

            if (bonusRecords.length === 0) {
                bonusList.html(`
                    <div class="list-group-item text-center py-4">
                        <i class="fa-solid fa-chart-line text-muted" style="font-size: 48px;"></i>
                        <p class="mt-2 mb-0 text-muted">No trade level bonus data available</p>
                    </div>
                `);
                return;
            }

            let bonusHTML = '';
            bonusRecords.forEach((bonus, index) => {
                const netAmount = parseFloat(bonus.amount || 0);
                const tradeAmount = parseFloat(bonus.trade || 0);
                const returns = parseFloat(bonus.returns || 0);
                const level = bonus.level || 'N/A';
                const date = bonus.date ? formatDate(bonus.date) : 'N/A';
                const fromId = bonus.fromId || 'N/A';

                // Determine badge color based on level
                let badgeColor = 'bg-success';
                if (level <= 3) badgeColor = 'bg-warning';
                if (level <= 1) badgeColor = 'bg-danger';

                bonusHTML += `
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="d-flex align-items-start">
                                <div class="me-3">
                                    <span class="badge ${badgeColor}" style="font-size: 14px; padding: 8px 12px;">
                                        L${level}
                                    </span>
                                </div>
                                <div>
                                    <h6 class="mb-1">Trade Level ${level} Bonus</h6>
                                    <small class="text-muted">From User ID: ${fromId}</small><br>
                                    <small class="text-muted">Trade: ₹${tradeAmount.toFixed(2)} × ${returns}% = ₹${netAmount.toFixed(2)}</small>
                                </div>
                            </div>
                            <div class="text-end">
                                <h6 class="mb-0 text-success">+₹${netAmount.toFixed(2)}</h6>
                                <small class="text-muted">${date}</small>
                            </div>
                        </div>
                    </div>
                `;
            });

            bonusList.html(bonusHTML);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        function showError(message) {
            $('#total-bonus').text('₹0.00');
            $('#bonus-list').html(`
                <div class="list-group-item text-center py-4">
                    <i class="fa-solid fa-exclamation-triangle text-danger" style="font-size: 48px;"></i>
                    <p class="mt-2 mb-0 text-danger">${message}</p>
                    <button class="btn btn-sm btn-outline-primary mt-2" onclick="loadTradeLevelBonusData()">Retry</button>
                </div>
            `);
        }
    </script>
</body>

</html>