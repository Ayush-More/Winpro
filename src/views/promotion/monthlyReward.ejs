<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg+xml" href="/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Salary Income - DeltInWin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" crossorigin="" href="/index_files/index-BUBUniRp.css">
</head>

<body style="font-size: 12px;">
    <div id="root">
        <div class="mainApp">
            <div class="container-fluid" style="padding: 4px 12px;">
                <div class="row align-items-center mb-3">
                    <div class="col-2">
                        <a href="/promotion" class="text-decoration-none">
                            <i class="fa-solid fa-arrow-left text-theme1" style="font-size: 20px;"></i>
                        </a>
                    </div>
                    <div class="col-8 text-center">
                        <h5 class="mb-0 text-theme1 fw-bold">Monthly Salary Income</h5>
                    </div>
                    <div class="col-2"></div>
                </div>

                <div class="row mb-3">
                    <div class="col-12">
                        <div class="card bg-gradient-primary text-white border-0 rounded-3">
                            <div class="card-body text-center" style="
    background: linear-gradient(90deg, #E67302 0%, #ee0a24 100%);
">
                                <h6 class="card-title mb-2">Total Monthly Salary</h6>
                                <h2 class="mb-0" id="total-monthly-salary">₹0.00</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 rounded-3">
                            <div class="card-header bg-theme1 text-white">
                                <h6 class="mb-0">Monthly Salary History</h6>
                            </div>
                            <div class="card-body p-0">
                                <div id="monthly-salary-list" class="list-group list-group-flush">
                                    <div class="list-group-item text-center py-4">
                                        <i class="fa-solid fa-calendar text-muted" style="font-size: 48px;"></i>
                                        <p class="mt-2 mb-0 text-muted">No monthly reward data available</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/client.js"></script>
    <script>
        $(document).ready(function() {
            console.log('Monthly Reward page loaded');
            loadMonthlyRewardData();
        });

        function loadMonthlyRewardData() {
            // Show loading state
            $('#total-monthly-salary').text('Loading...');
            $('#monthly-salary-list').html('<div class="list-group-item text-center py-4"><i class="fa-solid fa-spinner fa-spin text-muted" style="font-size: 48px;"></i><p class="mt-2 mb-0 text-muted">Loading monthly salary data...</p></div>');

            // Fetch monthly salary data
            $.ajax({
                type: "POST",
                url: "/api/webapi/MonthlySalary",
                data: {},
                dataType: "json",
                success: function(response) {
                    console.log('Monthly salary response:', response);
                    if (response.status === true) {
                        updateMonthlyRewardUI(response.data);
                    } else {
                        showError('Failed to load monthly salary data');
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Error loading monthly salary data:', error);
                    showError('Error loading monthly salary data');
                }
            });
        }

        function updateMonthlyRewardUI(data) {
            const salaryRecords = data.records || [];
            const totalSalary = data.totalSalaryEarned || 0;
            const salaryLevels = data.salaryLevels || [];

            // Update summary cards
            $('#total-monthly-salary').text(`₹${totalSalary.toLocaleString()}`);

            // Render salary list
            renderMonthlyRewardList(salaryRecords, salaryLevels);
        }

        function renderMonthlyRewardList(salaryRecords, salaryLevels) {
            const salaryList = $('#monthly-salary-list');

            if (salaryRecords.length === 0) {
                // Show salary levels table when no records
                let levelsHTML = `
                    <div class="list-group-item">
                        <h6 class="text-primary mb-3"><i class="fa-solid fa-info-circle me-2"></i>Monthly Salary Levels</h6>
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Level</th>
                                        <th>Active Players</th>
                                        <th>Min Recharge</th>
                                        <th>Monthly Income</th>
                                    </tr>
                                </thead>
                                <tbody>
                `;

                salaryLevels.forEach(level => {
                    levelsHTML += `
                        <tr>
                            <td><strong>Level ${level.level}</strong></td>
                            <td>${level.players.toLocaleString()}</td>
                            <td>₹${level.recharge.toLocaleString()}</td>
                            <td class="text-success fw-bold">₹${level.monthlyIncome.toLocaleString()}</td>
                        </tr>
                    `;
                });

                levelsHTML += `
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="list-group-item text-center py-4">
                        <i class="fa-solid fa-calendar text-muted" style="font-size: 48px;"></i>
                        <p class="mt-2 mb-0 text-muted">No monthly salary history yet</p>
                        <small class="text-muted">Monthly salary will appear here once you qualify</small>
                    </div>
                `;

                salaryList.html(levelsHTML);
                return;
            }

            let salaryHTML = '';
            salaryRecords.forEach((salary, index) => {
                const amount = parseFloat(salary.amount || 0);
                const date = salary.date_time ? formatDate(salary.date_time) : 'N/A';
                const level = salary.level || 0;
                const activePlayers = salary.active_players || 0;

                salaryHTML += `
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="mb-1">Monthly Salary - Level ${level}</h6>
                                <p class="mb-1 text-muted small">
                                    <i class="fa-solid fa-users me-1"></i>${activePlayers} Active Players
                                </p>
                                <small class="text-muted">${date}</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-success">+₹${amount.toLocaleString()}</span>
                            </div>
                        </div>
                    </div>
                `;
            });

            salaryList.html(salaryHTML);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        function showError(message) {
            $('#total-monthly-salary').text('₹0.00');
            $('#monthly-salary-list').html(`
                <div class="list-group-item text-center py-4">
                    <i class="fa-solid fa-exclamation-triangle text-danger" style="font-size: 48px;"></i>
                    <p class="mt-2 mb-0 text-danger">${message}</p>
                    <button class="btn btn-sm btn-outline-primary mt-2" onclick="loadMonthlyRewardData()">Retry</button>
                </div>
            `);
        }
    </script>
</body>

</html>